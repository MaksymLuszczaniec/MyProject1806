@model PeopleInspection.ViewModels.SearchViewModel

@{
    ViewData["Title"] = "People List";
}

<h1>People List</h1>

<form asp-action="Index" method="get">
    <div class="form-group">
        <input type="text" name="searchString" value="@Model.SearchString" placeholder="Search" />
        <button type="submit">Search</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>City</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model.People)
        {
            <tr>
                <td>@person.Name</td>
                <td>@person.City</td>
                <td>
                    <a asp-action="Details" asp-route-id="@person.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create New Person</a>
